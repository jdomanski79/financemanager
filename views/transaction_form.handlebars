<form method='post' autocomplete='off'>
  <fieldset>
    <legend>
      {{title}}
    </legend>    
    <div class="input">
      <span class="input-name"><label for="date">Data</label></span>
      <input class="input-field" type="date" name="date" id="date" value="{{date}}" autofocus>
    </div>

    <div class="input">
      <span class="input-name">
        <label for="sum">
          Kwota
        </label>
      </span>
      <input class="input-field" type="number" step="0.01" name="sum" id="sum"> 
<!--       value="{{transaction.sum}}"> -->
    </div>

    <div class="input">
      <span class="input-name">
        <label for="category">
          Kategoria 
        </label>
      </span>
      <select class="input-field" name="category" id="category">
         {{#each categories}} 
         <option value='{{this._id}}'>{{this.name}}</option>
         {{/each}}
      </select>
    </div>

    <div class="input">
      <span class="input-name">
        <label for="description">
          Opis
        </label>
      </span>
      <input class="input-field" type="text" name="description" id="description" value="{{transaction.description}}">
    </div>

    <button type="submit" class="input-name">Zapisz</button>
  </fieldset>
</form>

{{#if errors}}
  <ul>
    {{#each errors}}
      <li>{{this.msg}}</li>
    {{/each}}
  </ul>
{{/if}}

