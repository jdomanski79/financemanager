<div class="card fluid shadowed">
   <h1 class="section">
     Witaj {{user.name}}!
   </h1>
    <div class="row">
      <div class="col-sm-12">
        <h2>
          Bilans miesiąca: {{bilans}} zł
        </h2>  
      </div>
      
      <div class="col-sm-12 col-md-6">
        <div class="card fluid shadowed">
          <h2 class="section">
            Wpływy: {{incomes.total}} zł
          </h2>
          {{#each incomes.categories}}
          <div class="row">
            <div class="col-sm" style="text-align: right">
              {{this.name}}:                  
            </div>
            <div class="col-sm" style="text-align: right">
              {{this.sum}} zł  
            </div>
          </div>

        {{/each}}
        </div>
      </div>
      
      <div class="col-sm-12 col-md-6">
        <div class="card fluid shadowed">
          <h2 class="section">
            Wydatki: {{outcomes.total}} zł
          </h2>
          
            {{#each outcomes.categories}}
            <div class="row">
              <div class="col-sm" style="text-align: right">
                {{this.name}}:                  
              </div>
              <div class="col-sm" style="text-align: right">
                {{this.sum}} zł  
              </div>
          </div>
          {{/each}}
        </div>
      </div>
      
  </div>
</div>
