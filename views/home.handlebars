<div class="card fluid shadowed">
   <h1 class="section">
     Witaj {{user.name}}!
   </h1>
    <div class="row">
      <div class="col-sm-12">
        <h2>
          Bilans miesiąca: {{bilans}} zł
        </h2>  
      </div>
      
      <div class="col-sm-12 col-md-6">
        <div class="card fluid shadowed">
          <h2 class="section">
            Wpływy: {{incomes.total}} zł
          </h2>
          <ul>
            {{#each incomes.categories}}
            <li>
              <div class="row">
                <div class="col-sm-4">
                  {{this.name}}:                  
                </div>
                <div class="col-sm-8">
                  {{this.sum}} zł  
                </div>
                 
              </div>
              
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
      
      <div class="col-sm-12 col-md-6">
        <div class="card fluid shadowed">
          <h2 class="section">
            Wydatki: {{outcomes.total}} zł
          </h2>
          <ul>
            {{#each outcomes.categories}}
            <li>
              {{this.name}}: {{this.sum}} zł
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
      
  </div>
</div>
