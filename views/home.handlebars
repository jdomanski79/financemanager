 <h1>
   Witaj {{user.name}}!
 </h1>
 <h2>
   Bilans miesiąca: {{bilans}} zł
 </h2>
 
<div class="row">
  <div class="column">
    <table class="home-table">
      <thead>
        <tr>
          <th class="align-left"> Wpływy:</th>
          <th> {{incomes.total}} zł</th>
        </tr>
      </thead>
      <tbody>
        {{#each incomes.categories}}
        <tr>
          <td>{{this.name}}</td>
          <td class="currency">{{this.sum}} zł</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="column">
    <table class="home-table">
      <thead>
        <tr>
          <th class="align-left"> Wydatki:</th>
          <th> {{outcomes.total}} zł</th>
        </tr>
      </thead>
      <tbody>
      {{#each outcomes.categories}}
      <tr>
        <td>{{this.name}}</td>
        <td class="currency">{{this.sum}} zł</td>
      </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>

